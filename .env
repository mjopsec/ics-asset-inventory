# ICS Asset Inventory Environment Variables

# Server Configuration
ICS_SERVER_HOST=0.0.0.0
ICS_SERVER_PORT=8080
ICS_SERVER_MODE=debug

# Database Configuration  
ICS_DATABASE_DRIVER=sqlite
ICS_DATABASE_NAME=ics_inventory
ICS_DATABASE_DEBUG=true

# Security Configuration
ICS_SECURITY_JWT_SECRET=your-secret-key-change-in-production-make-it-at-least-32-chars
ICS_SECURITY_ENABLE_AUTH=false

# Logging Configuration
ICS_LOGGING_LEVEL=info
ICS_LOGGING_FORMAT=console
